{
  "name": "@carbonopus/carbon-coin",
  "version": "0.1.0",
  "description": "Ethereum Contracts for CarbonOpus",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=20.17.0"
  },
  "scripts": {
    "reinstall": "rm -rf abis && rm -rf build && rm -rf cache && rm -rf typechain-types && rm -rf node_modules && rm -f yarn.lock && yarn clean && yarn",
    "clean": "rm -rf build cache coverage coverage.json test-results.xml",
    "verify": "yarn hint && yarn test",
    "compile": "hardhat --show-stack-traces --max-memory 8192 compile",
    "clean-test": "rm -rf abis && rm -rf build && rm -rf cache && yarn test",
    "test": "yarn hardhat test --deploy-fixture --network hardhat ./tests/CarbonCoin.test.ts",
    "watch-test": "hardhat watch test",
    "hint": "solhint \"contracts/**/*.sol\"",
    "coverage": "hardhat --show-stack-traces coverage --temp coverage_build",
    "gas": "REPORT_GAS=true hardhat test",
    "start": "hardhat node --port 8545",
    "deploy": "hardhat deploy --tags CarbonCoinLauncher --network"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.8",
    "@openzeppelin/contracts": "^5.4.0",
    "solady": "^0.1.17"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/cli": "^2.8.0",
    "@truffle/hdwallet-provider": "^1.0.34",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "chai": "^4.3.7",
    "chai-ethers": "^0.0.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.0.0",
    "eslint-plugin-jest": "^24.0.1",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.7.2",
    "hardhat": "^2.22.6",
    "hardhat-abi-exporter": "^2.0.6",
    "hardhat-deploy": "^0.11.20",
    "hardhat-deploy-ethers": "^0.3.0-beta.7",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-watcher": "^2.1.1",
    "lodash": "^4.17.21",
    "mocha-junit-reporter": "^2.2.1",
    "solc": "0.8.27",
    "solhint": "^3.0.0",
    "solidity-coverage": "^0.8.14",
    "solidity-docgen": "^0.5.3",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.2",
    "typescript": "^4.9.4"
  }
}
